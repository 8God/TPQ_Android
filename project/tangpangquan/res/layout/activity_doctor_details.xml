                android:gravity="center_vertical"
                android:text="正在加载、、"
                android:textColor="#666666"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/vLine14"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rlUser3"
            android:background="#c8c8c8" />

        <RelativeLayout
            android:id="@+id/rlUser4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vLine14"
            android:padding="16dp" >

            <TextView
                android:id="@+id/tvUser4"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="用户:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSay4"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/tvUser4"
                android:gravity="center_vertical"
                android:text="很满意"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvUserContent4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUser4"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="正在加载、、"
                android:textColor="#666666"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/vLine15"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rlUser4"
            android:background="#c8c8c8" />

        <RelativeLayout
            android:id="@+id/rlUser5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vLine15"
            android:padding="16dp" >

            <TextView
                android:id="@+id/tvUser5"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="用户:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSay5"
