<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_toolbar"
        android:layout_marginTop="-4dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_report_circle_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/bg_disable_post_title"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:text="举报帖子标题举报帖子标题举报帖子标题举报帖子标题举报帖子标题"
            android:textColor="@color/micro_gray"
            android:textSize="16sp" />

        <include layout="@layout/default_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:text="@string/bbs_report_tips"
            android:textColor="@color/dark_gray"
            android:textSize="16sp" />

        <include layout="@layout/default_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/lineColor" />

        <RadioGroup
            android:id="@+id/rdogrp_report_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/rdobtn_rubbish_ad"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:button="@drawable/selector_radionbtn"
                android:text="垃圾广告" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/lineColor" />

            <RadioButton
                android:id="@+id/rdobtn_attack"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:button="@drawable/selector_radionbtn"
                android:text="人身攻击" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/lineColor" />

            <RadioButton
                android:id="@+id/rdobtn_adult"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:button="@drawable/selector_radionbtn"
                android:text="淫秽色情" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/lineColor" />

            <RadioButton
                android:id="@+id/rdobtn_illegal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:button="@drawable/selector_radionbtn"
                android:text="反动违法" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/lineColor" />

            <RadioButton
                android:id="@+id/rdobtn_other"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:button="@drawable/selector_radionbtn"
                android:text="其他" />
        </RadioGroup>
    </LinearLayout>

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/toolbar" />

</RelativeLayout>