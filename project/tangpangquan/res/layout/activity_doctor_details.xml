                <TextView
                    android:id="@+id/tvHigher3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left|center_vertical"
                    android:paddingRight="16dp"
                    android:text="高于同行"
                    android:textColor="@color/arror_high"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/vLine8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll4"
            android:background="#c8c8c8" />

        <View
            android:id="@+id/vLine9"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/vLine8"
            android:background="#f0f3f5" />

        <View
            android:id="@+id/vLine10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/vLine9"
            android:background="#c8c8c8" />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@id/vLine10" >

            <TextView
                android:id="@+id/tvEvaluation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="用户评价"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvMore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:drawableRight="@drawable/common_icon_arrowblue"
                android:gravity="center_vertical"
                android:text="更多"
                android:textColor="#29b6f6"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/vLine11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl1"
            android:background="#c8c8c8" />

        <RelativeLayout
            android:id="@+id/rlUser1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vLine11"
            android:padding="16dp" >

            <TextView
                android:id="@+id/tvUser1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="用户:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSay1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/tvUser1"
                android:gravity="center_vertical"
                android:text="很满意"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvUserContent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUser1"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="正在加载、、"
                android:textColor="#666666"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/vLine12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rlUser1"
            android:background="#c8c8c8" />

        <RelativeLayout
            android:id="@+id/rlUser2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vLine12"
            android:padding="16dp" >

            <TextView
                android:id="@+id/tvUser2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="用户:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSay2"
