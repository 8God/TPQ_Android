            <TextView
                android:id="@+id/tvUserContent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUser2"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="正在加载、、"
                android:textColor="#666666"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/vLine13"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rlUser2"
            android:background="#c8c8c8" />

        <RelativeLayout
            android:id="@+id/rlUser3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vLine13"
            android:padding="16dp" >

            <TextView
                android:id="@+id/tvUser3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="用户:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSay3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/tvUser3"
