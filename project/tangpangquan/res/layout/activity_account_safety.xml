<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/default_background" />

    <include
        android:layout_width="match_parent"
        android:layout_height="1px"
        layout="@layout/default_line" />

    <RelativeLayout
        android:id="@+id/rl_account_safety"
        style="@style/personal_center_item"
        android:layout_height="48dp" >

        <TextView
            style="@style/TextView.PersonalCenterItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号绑定" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/imv_account_safety"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imv_accountphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/psn_icon_accountphone" />

            <ImageView
                android:id="@+id/imv_accountwechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/psn_icon_accountwechat" />

            <ImageView
                android:id="@+id/imv_accountqq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/psn_icon_accountqq" />

            <ImageView
                android:id="@+id/imv_accountweibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/psn_icon_accountweibo" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imv_account_safety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/right_arrow_icon" />
    </RelativeLayout>

    <include layout="@layout/default_line" />

    <RelativeLayout
        android:id="@+id/rl_logon_account"
        style="@style/personal_center_item"
        android:layout_height="48dp" >

        <TextView
            style="@style/TextView.PersonalCenterItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录账号" />

        <TextView
            android:id="@+id/tv_logon_account"
            style="@style/TextView.PersonalCenterItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="138" />
    </RelativeLayout>

    <include layout="@layout/default_line" />

    <RelativeLayout
        android:id="@+id/rl_modify_password"
        style="@style/personal_center_item"
        android:layout_height="48dp" >

        <TextView
            style="@style/TextView.PersonalCenterItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码" />

        <ImageView
            android:id="@+id/imv_modify_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/right_arrow_icon" />

        <TextView
            android:id="@+id/tv_username"
            style="@style/TextView.PersonalCenterInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/imv_modify_password"
            android:text="点击修改密码"
            android:textColor="@color/default_hint" />
    </RelativeLayout>

    <include layout="@layout/default_line" />

</LinearLayout>